<VBox fx:id="vboxMainContainer" prefHeight="768.0" prefWidth="1024.0" stylesheets="@../../../../resources/javaUiStyle.css" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.indisystems.qhmiviewer.model.ModelController">
   <children>
	  <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="%file">
            <items>
           	  <MenuItem fx:id="menuItemCloseProject" mnemonicParsing="false" text="%close_project" />
              <MenuItem id="menuClose" fx:id="menuItemClosePlayer" mnemonicParsing="false" text="%close_player" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="%help">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#onBttInfoClick" text="Info" />
                  <MenuItem mnemonicParsing="false" onAction="#onBttForumClick" text="Forum" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
      <ProgressIndicator fx:id="progressIndicator" prefHeight="50.0" prefWidth="1024.0" scaleX="0.1" scaleY="0.1" scaleZ="0.5" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
